<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#31D4BF00"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivLutemonImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLutemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Name"
            android:textColor="#504F4F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLutemonColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Color"
            android:textColor="#504F4F" />

        <TextView
            android:id="@+id/txtLutemonAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Attack"
            android:textColor="#504F4F" />

        <TextView
            android:id="@+id/txtLutemonDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Defense"
            android:textColor="#504F4F" />

        <TextView
            android:id="@+id/txtLutemonExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Exp"
            android:textColor="#504F4F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLutemonMaxHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="MaxHP"
            android:textColor="#504F4F" />

        <TextView
            android:id="@+id/txtLutemonHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="HP"
            android:textColor="#504F4F" />

        <TextView
            android:id="@+id/txtLutemonWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Wins"
            android:textColor="#504F4F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLutemonDefeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Defeats"
            android:textColor="#504F4F" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/delete" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>